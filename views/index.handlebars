<div class="container mt-5">
  <form action="/" method="POST" class="d-flex flex-column">
    <div class="d-flex category-section justify-content-center">
      <div class="d-flex col-8 col-md-5 col-lg-5">
        <select class="custom-select">
          <option selected>類別</option>
          {{#each categories}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    
    <div class="d-flex amount-section justify-content-center mt-3">
      <div class="d-flex totalAmount">總金額:</div>
      <div class="showAmount d-flex p-2 bd-highlight">
        <p class="display-2 text-warning">66666</p>
      </div>
    </div>
    <!--list-->
    <li class="list-group-item">
      <div class="row">
        <div class="col-auto mr-auto">
          <h4 style="display: inline; vertical-align: middle;">
            名字
          </h4>
        </div>
        <div class="col-auto">
          <a class="btn btn-light" href="/todos/{{this._id}}/edit">修改</a>
          <form action="/todos/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-light" type="submit">刪除</button>
          </form>
        </div>
      </div>
    </li>
    <!--button-->
    <div class="d-flex justify-content-center button-section mt-5">
      <a href="/expenses/new">
        <button type="submit" class="btn btn-warning btn-lg">新增支出</button>
      </a>
      
    </div>
    
    
  </form>
  

</div>
