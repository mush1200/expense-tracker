<div class="container mt-5">
  <form action="/records/{{record._id}}?_method=PUT" method="POST" class="d-flex flex-column align-items-center">
    <div class="col-sm-8">
      <div class="title row">
        <p class="col-5">*必填欄位</p>
        <h3 class="col-7">請修改你的支出</h3>
      </div>
      <div class="form-group row">
        <label for="name" class="col-form-label col-sm-2">名稱*:</label>
        <input type="text" class="form-control col-sm-10" id="name" placeholder="" name="name" value="{{record.name}}" required>
      </div>
      <div class="form-group row">
        <label for="date" class="col-sm-2 col-form-label">日期*:</label>
        <input type="date" class="form-control col-sm-10" id="date" placeholder="" name="date" value="{{toDate record.date}}" required>
      </div>
      <div class="form-group row">
        <label for="category" class="col-sm-2 col-form-label">類別*:</label>
        <select class="form-control col-sm-10" id="category" placeholder="類別" name="category" require>
          <option selected>{{record.category}}</option>
          {{#each categories}}
          <option>{{this.categoryName}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group row">
        <label for="amount" class="col-sm-2 col-form-label">金額*:</label>
        <input type="number" class="form-control col-sm-10" id="amount" placeholder="" name="amount" value="{{record.amount}}" required>
      </div>
      <!--button-->
      <div class="d-flex justify-content-center button-section mt-5">
        <button type="submit" class="btn btn-outline-dark btn-lg">送出</button>
      </div>
    </div>


  </form>
</div>